#!/bin/bash
##
## Vagrant Box: Create an index metadata from per-version metadata
## Copyright (c) 2015-2018 SATOH Fumiyasu @ OSS Technology Corp., Japan
##
## License: GNU General Public License version 3
##

set -u
set -o pipefail || exit $?
shopt -s lastpipe || exit $?

pdie() {
  echo "$0: ERROR: $1"
  exit 1
}

## ======================================================================

if [[ $# -ne 1 ]]; then
  echo "Usage: $0 <BOX_REPO>/<BOX_NAME>"
  exit 1
fi

box_dir="$1"; shift
box_index_json="$box_dir/index.json"

box_version_jsons=($(
  ls "$box_dir"/[0-9]*/index.json
))

box_latest_json=$(
  jq \
    --compact-output \
    '.versions | .[0] |[.version, input_filename]' \
    "${box_version_jsons[@]}" \
  |sed 's/^\["//;s/"\]$//;s/","/ /' \
  |sort --reverse --version-sort \
  |head -n1 \
  |sed 's/^[^ ]* //' \
  ;
)

if [[ -z $box_latest_json ]]; then
  pdie "No version found in per-version JSON files"
fi

## ======================================================================

{
  jq \
    --compact-output \
    'del(.versions)' \
    "$box_latest_json" \
  |sed 's/}$/,/' \
  ;

  echo '"versions": ['
  jq \
    --compact-output \
    '.versions |.[]' \
    "${box_version_jsons[@]}" \
  |sed '$!s/$/,/' \
  ;
  echo ']'

  echo '}'
} \
|jq '.' \
>"$box_index_json" \
;

## ======================================================================

exit 0
